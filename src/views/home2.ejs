<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WhoCar</title>
    <link rel="shortcut icon" type="image/x-icon" href="./img/repair.ico"/>

    <!-- JS -->
    <script defer src="./js/time.js"></script>
    <script src="https://kit.fontawesome.com/818834dbf2.js" crossorigin="anonymous"></script>

    <!-- CSS 초기화 -->
    <link rel="stylesheet" href="./css/reset.css" />
    <link rel="stylesheet" href="./css/base.css" />
    <link rel="stylesheet" href="./css/header-search.css" />
    <link rel="stylesheet" href="./css/home.css" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />

</head>
<body>
    <div class="container">
        
        <!-- MAIN MENU -->
        <header>
            <div class="logo">
                <img src="./img/repair.png" alt="logo" width="40px">
                <span>WhoCar</span>
            </div>
                <form id="search">
                    <input type="text" name="keyword" placeholder=" Search" />
                    <button class="search-btn" formaction="/search">
                        <a href="javascript:void(0)">
                            <i class="fas fa-search"></i>
                        </a>
                    </button>
                </form>
        </header>


        <!-- NAV -->
        <nav>
            <div class="menu">
                <ul class="main-menu">
                    <li>
                        <a href="/"><i class="fas fa-home"></i>
                            Home
                        </a>
                    </li>
                    <li>
                        <a href="/search">
                            <i class="fas fa-search"></i>
                            검색
                        </a>
                    </li>
                    <li>
                        <a href="/parts">
                            <i class="fas fa-th-large"></i>
                            재고관리
                        </a>
                    </li>
                    <li>
                        <a href="/calendar">
                            <i class="far fa-calendar-alt"></i>
                            일정관리
                        </a>
                    </li>
                </ul>
                
                
                <div id="time">
                    <p>0000-00-00</p>
                    <div class="clock">
                        <p>AM </p>
                        <p>00:00</p>
                    </div>
                </div>
                    
                

            </div>
        </nav>
        

        <!-- MAIN CONTENTS -->
        <article>
            <section class="section-1">
                <ul class="view">
                    <li class="item">
                        <p class="item-title">last week</p>
                        <div class="increase">
                            <p>19</p>
                            <i class="fas fa-chevron-up i-green"></i>
                        </div>
                    </li>

                    <li class="item">
                        <p class="item-title">this week</p>
                        <div class="increase">
                            <p>11</p>
                            <i class="fas fa-chevron-down i-red"></i>
                        </div>
                    </li>

                    <li class="item">
                        <p class="item-title">something</p>
                        <div class="increase">
                            <p>11</p>
                            <i class="fas fa-chevron-up i-green"></i>
                        </div>
                    </li>

                    <li class="item">
                        <p class="item-title">something</p>
                        <div class="increase">
                            <p>10</p>
                            <i class="fas fa-chevron-down i-red"></i>
                        </div>
                    </li>
                </ul>
            </section>

            <section class="section-2">
                <div class="graph">
                    <div class="item">
                        <p class="item-title">The number of using parts (7 days)</p>
                        <div class="graph-circle">
                            <div class="layout-test">
                                <div class="test"><span class="test-center"></span></div>
                            </div>
                            <ul class="test-data">
                                <li class="circle-graph-color-red"><span>data1 (25%)</span></li>
                                <li class="circle-graph-color-blue"><span>data2 (31%)</span></li>
                                <li class="circle-graph-color-yellow"><span>data3 (44%)</span></li>
                            </ul>
                        </div>
                    </div>
                    <div class="item">
                        <p class="item-title">The number of customers (7 days)</p>
                        <div class="graph-chart">
                            <div class="test2">
                                <div class="test2-bar">
                                    <div class="bar"></div>
                                </div>
                                <div class="test2-bar">
                                    <div class="bar"></div>
                                </div>
                                <div class="test2-bar">
                                    <div class="bar"></div>
                                </div>
                                <div class="test2-bar">
                                    <div class="bar"></div>
                                </div>
                                <div class="test2-bar">
                                    <div class="bar"></div>
                                </div>
                                <div class="test2-bar">
                                    <div class="bar"></div>
                                </div>
                                <div class="test2-bar">
                                    <div class="bar"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            

            <section class="section-3 ">
                <div class="memo item">
                    <div class="item-title">
                        <p>Memo</p> 
                        <button id="memo-post">post</button>
                    </div>
                    <textarea name="" id="" cols="30" rows="10" placeholder="내용을 입력하세요."></textarea>
                    
                </div>

                <div class="mini-calendar item">
                    <div class="item-title">
                        <p>Today Events</p>
                        <div id="today">2021-08-19 (목)</div>
                    </div>
                    <ul class="events">
                        <li><span>time</span>events</li>
                        <li><span>12:00</span>event 1</li>
                        <li><span>14:00</span>event 2</li>
                        <li><span>17:30</span>event 3</li>
